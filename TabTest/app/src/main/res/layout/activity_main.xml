<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/numberImage1"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        app:srcCompat="@drawable/tytle"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_gravity="top"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  コンテンツ(下のタブで選択）"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/contentsListView"
        android:layout_width="match_parent"
        android:layout_height="324dp">

    </ListView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/simple_frame">

        <android.support.design.widget.TabItem
            android:id="@+id/topTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="トップ" />

        <android.support.design.widget.TabItem
            android:id="@+id/monsterTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="モンスター" />

        <android.support.design.widget.TabItem
            android:id="@+id/wazaTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="わざ" />

        <android.support.design.widget.TabItem
            android:id="@+id/typeTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タイプ" />

        <android.support.design.widget.TabItem
            android:id="@+id/gaibuTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外部サイト" />
    </android.support.design.widget.TabLayout>

</LinearLayout>